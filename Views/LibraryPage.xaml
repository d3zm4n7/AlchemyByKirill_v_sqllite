<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AlchemyByKirill_v_sqllite.Views.LibraryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AlchemyByKirill_v_sqllite.ViewModels"
    xmlns:models="clr-namespace:AlchemyByKirill_v_sqllite.Models"
    x:DataType="vm:LibraryViewModel"
    BackgroundColor="#2A2530"
    Shell.NavBarIsVisible="False">

    <Grid Padding="10" RowDefinitions="Auto,*,Auto">

        <Label Grid.Row="0"
               Text="Elements Library"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               FontSize="24"
               TextColor="#D4AF37"
               Margin="0,0,0,10"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Elements}"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="4"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Element">
                    <VerticalStackLayout Padding="6" Spacing="4" HorizontalOptions="Center">
                        <Image Source="{Binding ImagePath}" WidthRequest="45" HeightRequest="45"/>
                        <Label Text="{Binding Name}"
                               TextColor="#D4AF37"
                               FontSize="12"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button 
            Grid.Row="2"
            Text="Вернуться"
            Command="{Binding GoBackCommand}"
            WidthRequest="120"
            HeightRequest="60"
            CornerRadius="12"
            BackgroundColor="#2A2530"
            BorderColor="#D4AF37"
            BorderWidth="2"
            TextColor="#D4AF37"
            FontAttributes="Bold"
            FontSize="12"
            VerticalOptions="End"
            Margin="0,10,0,0"/>

    </Grid>
</ContentPage>