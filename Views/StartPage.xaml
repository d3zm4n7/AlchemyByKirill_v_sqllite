<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlchemyByKirill_v_sqllite.ViewModels"
             x:DataType="vm:StartViewModel"
             x:Class="AlchemyByKirill_v_sqllite.Views.StartPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*, Auto">

        <Image 
            Grid.Row="0"
            Grid.RowSpan="2"
            Source="splash.png"
            Aspect="AspectFill"
            Opacity="0.8" />

        <Grid Grid.Row="1"
              Padding="30, 20"
              RowSpacing="10"
              ColumnSpacing="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button 
            Grid.Row="0"
            Grid.Column="0"
            Text="Play"
            Command="{Binding GoToGameCommand}"
            WidthRequest="120"
            HeightRequest="60"
            CornerRadius="12"
            BackgroundColor="#2A2530"
            BorderColor="#D4AF37"
            BorderWidth="2"
            TextColor="#D4AF37"
            FontAttributes="Bold"
            FontSize="12"/>

            <Button 
            Grid.Row="0"
            Grid.Column="1"
            Text="Library"
            Command="{Binding GoToLibraryCommand}"
            WidthRequest="120"
            HeightRequest="60"
            CornerRadius="12"
            BackgroundColor="#2A2530"
            BorderColor="#D4AF37"
            BorderWidth="2"
            TextColor="#D4AF37"
            FontAttributes="Bold"
            FontSize="12"/>

            <Button 
            Grid.Row="1"
            Grid.Column="0"
            Text="Rules"
            Command="{Binding GoToRulesCommand}"
            WidthRequest="120"
            HeightRequest="60"
            CornerRadius="12"
            BackgroundColor="#2A2530"
            BorderColor="#D4AF37"
            BorderWidth="2"
            TextColor="#D4AF37"
            FontAttributes="Bold"
            FontSize="12"/>

            <Button 
            Grid.Row="1"
            Grid.Column="1"
            Text="Exit"
            Command="{Binding ExitAppCommand}"
            WidthRequest="120"
            HeightRequest="60"
            CornerRadius="12"
            BackgroundColor="#2A2530"
            BorderColor="#D4AF37"
            BorderWidth="2"
            TextColor="#D4AF37"
            FontAttributes="Bold"
            FontSize="12"/>

        </Grid>

    </Grid>

</ContentPage>
